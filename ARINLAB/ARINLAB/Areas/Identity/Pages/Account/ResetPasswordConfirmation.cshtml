@page
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@using ARINLAB
@inject IHtmlLocalizer<SharedResource> SharedLocalizer
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = SharedLocalizer["Reset password confirmation"];
}

<div class="wrapper bg-gray-100 w-screen h-screen flex items-center justify-center flex-col" style="height: 60vh ">
    <div class="p-10 bg-white shadow-md rounded">
        <h1 class="text-success text-3xl">@ViewData["Title"]</h1>
        <p class="text-info text-2xl">
            @SharedLocalizer["Your password has been reset."]
        </p>
        <p class="text-info text-2xl">
            @SharedLocalizer["Please"] <a asp-page="./Login"> @SharedLocalizer["click here to log in"]</a>.
        </p>
        <p style="margin-top:10px;">
            <a class="btn btn-danger" style="color:green" href="#">@SharedLocalizer["Go to Main page"]</a>
        </p>
    </div>
</div>

